
<div class="col-md-9">
  <table class="table table-striped table-bordered">
    <caption>
      <h2>Dishes</h2>
      <%= link_to 'Create dish', new_admin_dish_path, method: :get ,class:'btn btn-default' %>
    </caption>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Receipt</th>
    </tr>
    <% @dishes.each do |dish| %>
        <tr>
          <td><%= dish.name %></td>
          <td><%= dish.price %></td>
          <td><%= dish.receipt %></td>
          <td>
            <%= link_to "Edit", edit_admin_dish_path(dish) %>
            <%= link_to "Delete", admin_dish_path(dish), method: "delete", data: {confirm: 'Вы уверены?'} %>
            <%= link_to "Show", admin_dish_path(dish) %>
          </td>
        </tr>
    <% end %>

  </table>
</div>