<div class="col-md-9">
  <table class="table table-striped table-bordered">
    <caption>
      <h2>Restaurants</h2>
      <%= button_to 'Create new restaurant', new_admin_restaurant_path, method: :get ,class:'btn btn-default' %>
    </caption>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
    <% @restaurants.each do |restaurant| %>
        <tr>
          <td><%= restaurant.name %></td>
          <td><%= restaurant.review %></td>
          <td><%= image_tag "/restaurants/#{restaurant.image_name}.png", alt: restaurant.name, class: 'image-intro' %></td>
          <td>
            <%= link_to "Edit ", edit_admin_restaurant_path(restaurant) %>
            <%= link_to "Delete", admin_restaurant_path(restaurant), method: "delete", data: {confirm: 'Вы уверены?'} %>
            <%= link_to "Show", admin_restaurant_path(restaurant) %>
          </td>
        </tr>
    <% end %>

  </table>
</div>

