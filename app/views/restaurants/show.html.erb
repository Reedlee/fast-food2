<div class="media">
  <div class="media-left media-middle">
    <a href="#">
      <%= image_tag "/restaurants/#{@restaurant.image_name}.png", alt:@restaurant.name, class: 'media-object' %>
    </a>
  </div>
  <div class="media-body">
    <h4 class="media-heading">Название ресторана: <%= @restaurant.name %></h4>
    Описание ресторана: <%= @restaurant.description %>
  </div>
</div>

<div class="row">
  <% Dish.where("restaurant_id = ?", @restaurant.id).each do |dish|  %>
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <div class="caption">
            <h3><%= dish.name %> </h3>
            <p><%= dish.price %></p>
            <p><%= dish.receipt %></p>
            <p><%= link_to 'Оформить заказ', '#', class: 'btn btn-default' %></p>
          </div>
        </div>
      </div>
  <% end %>
</div>